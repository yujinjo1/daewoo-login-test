<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="24dp">

    <!-- 아이디 입력 -->
    <EditText
        android:id="@+id/editTextAccountId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:background="@android:drawable/editbox_background" />

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:background="@android:drawable/editbox_background"
        android:layout_marginTop="8dp" />

    <!-- 일반 로그인 버튼 -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_marginTop="16dp" />

    <!-- 회원가입 버튼 -->
    <Button
        android:id="@+id/buttonGoRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_marginTop="8dp" />

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <!-- 소셜 로그인 버튼들 -->
    <Button
        android:id="@+id/buttonGoogleLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google 로그인"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonKakaoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kakao 로그인"
        android:backgroundTint="#FEE500"
        android:textColor="#3A1D1D"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonNaverLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Naver 로그인"
        android:backgroundTint="#03C75A"
        android:textColor="#FFFFFF" />

</LinearLayout>
